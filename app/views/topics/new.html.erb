<!DOCTYPE html>
<html>
<head>
  <title>New Topic</title>
</head>
<body>
  <div class="container">
    <div class="row">
      <div class="col-md-8 mx-auto post-form-container">
        <h2 class="h2">スレッド新規登録</h2>
        <%= form_with(url: create_topics_path, model: @topic, local: true, method: :post, html: { class: 'topic-form' }) do |f| %>
          <% if @topic.errors.any? %>
            <ul>
              <% @topic.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %> 
            </ul>
          <% end %>
          <div class="form-group">
          <%= f.label "スレッド名", class: 'form-label' %>
          <%= f.text_field :title, class: 'form-control' %>
          </div>

          <div class="button-group">
          <%= f.submit '登録', class: 'btn btn-primary' %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</body>
</html>